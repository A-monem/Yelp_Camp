<% include ../partials/header%>

<h1 class="text-center">Edit Campground</h1>

<div class="container mx-auto" style="width:30%;">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" >
        <div class="form-group">
            <label for="name">Camp Name</label>
            <input class="form-control mb-2" type="text" value="<%=campground.name%>" name="campground[name]">
        </div>
        <div class="form-group">
            <label for="image">Image URL</label>
            <input class="form-control mb-2" type="text" value="<%=campground.image%>" name="campground[image]">
        </div>
        <div class="form-group">
            <label for="price">Price $</label>
            <input class="form-control mb-2" type="number" value="<%=campground.price%>" name="campground[price]" min="0.01" step="0.01">
        </div>
        <div class="form-group">
            <label for="location">Location</label>
            <input class="form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
             <input class="form-control mb-2" type="text"  value="<%=campground.description%>" name="campground[description]">
        </div>
        <button class="btn btn-outline-warning btn-lg" style="width:100%;">Update</button>
    </form>
    <a href="/campgrounds">Back</a>
</div>

<% include ../partials/footer%>
