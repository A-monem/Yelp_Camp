<h1 class="text-center mt-3">Edit Comment</h1>

<div class="container mx-auto" style="width:30%;">
    
    <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST" >
        
        <input class="form-control mt-3 mb-2" type="text" value="<%=comment.text%>" name="comment[text]">
    
        <button class="btn btn-outline-warning" style="width:100%;">Update</button>
        
    </form>
    
    <a href="/campgrounds">Back</a>
    
</div>

